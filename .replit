modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["chromium"]

[userenv]

[userenv.shared]
PORT = "5000"
NODE_ENV = "production"
BOT_NAME = "HAMO_BOT"
BOT_VERSION = "3.0.0"
YEAR = "2025"
DEVELOPER = "HAMO"
WHATSAPP_SESSION_PATH = "./.wwebjs_auth"
